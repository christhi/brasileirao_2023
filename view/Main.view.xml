<mvc:View controllerName="brasileirao.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
          <ObjectHeader title="Campeonato Brasileiro FioriNET" id="objheader"
          number="22ª"
          numberUnit="rodada"
          >
          </ObjectHeader>

          <IconTabBar id="icontabbar">
            <items>
                <IconTabFilter text="Classificação" icon="sap-icon://competitor" id="tabClassificacao">
                    <Table id="tabelaClassificacao" >
                        <columns>
                         <Column >
                            <Text text="Posição"></Text>
                         </Column>
                         
                         <Column >
                            <Text text="Escudo"></Text>
                         </Column>

                         <Column >
                            <Text text="Time"></Text>
                         </Column>

                         <Column >
                            <Text text="Pontos"></Text>
                         </Column>

                         <Column >
                            <Text text="Jogos"></Text>
                         </Column>

                         <Column >
                            <Text text="Vitórias"></Text>
                         </Column>

                         <Column >
                            <Text text="Empates"></Text>
                         </Column>

                         <Column >
                            <Text text="Derrotas"></Text>
                         </Column>

                         <Column >
                            <Text text="GM"></Text>
                         </Column>

                         <Column >
                            <Text text="GC"></Text>
                         </Column>

                         <Column >
                            <Text text="SG"></Text>
                         </Column>

                        </columns>

                        <items>
                           <ColumnListItem >
                            <cells>
                                <Text text="1"></Text>
                                <Image width="50%" src="https://logodownload.org/wp-content/uploads/2016/11/botafogo-logo-0.png"></Image>
                                <Text text="Botafogo"></Text>
                                <Text text="51"></Text>
                                <Text text="24"></Text>
                                <Text text="16"></Text>
                                <Text text="3"></Text>
                                <Text text="5"></Text>
                                <Text text="39"></Text>
                                <Text text="15"></Text>
                                <Text text="24"></Text>
                            </cells>
                           </ColumnListItem> 

                           <ColumnListItem >
                            <cells>
                                <Text text="2"></Text>
                                <Image width="50%" src="https://logodownload.org/wp-content/uploads/2015/05/palmeiras-logo-0.png"></Image>
                                <Text text="Palmeiras"></Text>
                                <Text text="44"></Text>
                                <Text text="24"></Text>
                                <Text text="12"></Text>
                                <Text text="8"></Text>
                                <Text text="4"></Text>
                                <Text text="38"></Text>
                                <Text text="18"></Text>
                                <Text text="20"></Text>
                            </cells>
                           </ColumnListItem> 
                        </items>

                    </Table>

                </IconTabFilter>

                <IconTabFilter text="Partidas" icon="sap-icon://soccer" id="idPartidas">
                  <core:Fragment fragmentName="brasileirao.view.partidas" type="XML" />

                </IconTabFilter>

            </items>
          </IconTabBar>

        </content>
    </Page>
</mvc:View>
